<%- content_for :title, "Change your password" -%>

<div class="spacing">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.input_field :reset_password_token, as: :hidden %>

    <div class="inputs">
      <%= f.error_notification %>
      <%- if f.full_error :reset_password_token %>
        <div>
          <%= f.full_error :reset_password_token %>
        </div>
      <%- end -%>
      <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { data: { password_reveal: "" } } %>
      <%= f.input :password_confirmation, label: "Confirm your new password", required: true, input_html: { data: { password_reveal: "" } } %>

      <div class="actions">
        <%= f.button :button, "Change my password", class: "button" %>
      </div>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>