<%
  modal_title = ""
  modal_title = yield :title if content_for? :title
  modal_title = yield :page_title if content_for? :page_title
%>

<div class="lightbox--header">
  <div class="lightbox--title">
    <%= modal_title %>
  </div>
  <button class="lightbox--close" data-modal-close aria-label="Close modal">&times;</button>
</div>
<div class="lightbox--body panel--padding">
  <%= yield %>
</div>