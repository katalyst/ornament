<%- 
  id ||= "example"
  ruby ||= false
  scss ||= false
  js ||= false
  no_html ||= false
-%>

<div class="tabs sg-feature">
  <nav class="tabs--links">
    <ul>
      <li><a href="#<%= id -%>__preview" class="tabs--link" data-tab="<%= id -%>__preview">Preview</a></li>
      <%- unless no_html -%>
        <li><a href="#<%= id -%>__source" class="tabs--link" data-tab="<%= id -%>__source">HTML</a></li>
      <%- end -%>
      <%- if ruby -%>
        <li><a href="#<%= id -%>__ruby" class="tabs--link" data-tab="<%= id -%>__ruby">Ruby</a></li>
      <%- end -%>
      <%- if scss -%>
        <li><a href="#<%= id -%>__scss" class="tabs--link" data-tab="<%= id -%>__scss">SCSS</a></li>
      <%- end -%>
      <%- if js -%>
        <li><a href="#<%= id -%>__js" class="tabs--link" data-tab="<%= id -%>__js">JS</a></li>
      <%- end -%>
    </ul>
  </nav>
  <div class="tabs--panes">
    <div class="tabs--pane" data-tab-for="<%= id -%>__preview">
      <%= yield -%>
    </div>
    <%- unless no_html -%>
      <div class="tabs--pane tabs--pane__flush" data-tab-for="<%= id -%>__source">
        <pre class="sg-pre prettyprint"><%= render_source(yield) -%></pre>
      </div>
    <%- end -%>
    <%- if ruby -%>
      <div class="tabs--pane tabs--pane__flush" data-tab-for="<%= id -%>__ruby">
        <pre class="sg-pre prettyprint"><%= raw(ruby) -%></pre>
      </div>
    <%- end -%>
    <%- if scss -%>
      <div class="tabs--pane tabs--pane__flush" data-tab-for="<%= id -%>__scss">
        <pre class="sg-pre prettyprint"><%= raw(scss) -%></pre>
      </div>
    <%- end -%>
    <%- if js -%>
      <div class="tabs--pane tabs--pane__flush" data-tab-for="<%= id -%>__js">
        <pre class="sg-pre prettyprint"><%= render_source(js) -%></pre>
      </div>
    <%- end -%>
  </div>
</div>